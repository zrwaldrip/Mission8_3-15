@model Mission8_3_15.Models.TaskItem

    @{
    ViewData["Title"] = "Delete Task";
}

<h2>Confirm Deletion</h2>

    <div class="alert alert-danger">
    <h4>Are you sure you want to delete this task?</h4>
    <p>This action cannot be undone.</p>
    </div>

    <div>
    <dl class="row mt-4">
    <dt class="col-sm-3">Task Name</dt>
    <dd class="col-sm-9">@Model.TaskName</dd>

    <dt class="col-sm-3">Due Date</dt>
    <dd class="col-sm-9">@Model.DueDate</dd>

    <dt class="col-sm-3">Quadrant</dt>
    <dd class="col-sm-9">@Model.Quadrant</dd>
        
    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@(Model.Category?.CategoryName ?? "None")</dd>
    </dl>
    
    <form method="post" asp-action="Delete">
    <input type="hidden" asp-for="TaskId" />
        
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
    </div>