@model Mission8_3_15.Models.TaskItem

@{
}
<h1>Enter the information for the task</h1>

<form>
    <input type="hidden" asp-for="TaskId">
    
    <label asp-for="TaskName">Task Name</label>
    <input asp-for="TaskName"/>
    <br/>
    <label asp-for="DueDate">Due Date</label>
    <input asp-for="DueDate"/>
    <br/>
    <select asp-for="Quadrant">
        <option value="">Select Quadrant</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
    </select>
    <br/>
    <select asp-for="Category">
        <option value="">Select Category</option>
        
    </select>
    <br/>
    <label asp-for="Completed">Have you completed the task?</label>
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
</form>