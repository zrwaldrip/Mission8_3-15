@model Mission8_3_15.Models.TaskItem

@{
    // Dynamically change the title based on whether we are adding or editing
    ViewData["Title"] = Model.TaskId == 0 ? "Add New Task" : "Edit Task";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            
            <input type="hidden" asp-for="TaskId" />
            <input type="hidden" asp-for="Completed" />

            <div class="form-group mb-3">
                <label asp-for="TaskName" class="control-label">Task Name</label>
                <input asp-for="TaskName" class="form-control" />
                <span asp-validation-for="TaskName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DueDate" class="control-label">Due Date</label>
                <input asp-for="DueDate" type="date" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Quadrant" class="control-label">Quadrant</label>
                <select asp-for="Quadrant" class="form-select">
                    <option value="">Select a Quadrant...</option>
                    <option value="1">1 - Important / Urgent</option>
                    <option value="2">2 - Important / Not Urgent</option>
                    <option value="3">3 - Not Important / Urgent</option>
                    <option value="4">4 - Not Important / Not Urgent</option>
                </select>
                <span asp-validation-for="Quadrant" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">Select a Category...</option>
                    @foreach (Mission8_3_15.Models.Category c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Task</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>